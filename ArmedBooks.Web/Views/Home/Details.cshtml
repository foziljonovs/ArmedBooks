@model ArmedBooks.BBL.Dtos.ProductDto

<div class="product-container">
    <div class="product-image">
        <img src="@Url.Content("~/" + Model.ImagePath)" alt="@Model.Brand">
    </div>
    <div class="product-details">
        <h2 class="product-title">@Model.Brand</h2>
        <h4 class="product-price">@Model.Price.ToString("C")</h4>
        <p class="product-description">@Model.About</p>
        <ul class="stars">
            <li><i class="fa fa-star"></i></li>
            <li><i class="fa fa-star"></i></li>
            <li><i class="fa fa-star"></i></li>
            <li><i class="fa fa-star"></i></li>
            <li><i class="fa fa-star"></i></li>
        </ul>
    </div>
</div>

<style>
        .product-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .product-image {
        flex: 1;
        width: 100%;
        max-width: 500px;
        height: auto;
        margin-bottom: 20px;
    }

    .product-details {
        flex: 2;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }

    .product-title {
        font-size: 2.25rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .product-price {
        font-size: 1.75rem;
        margin-bottom: 20px;
        color: #28a745;
    }

    .product-description {
        font-size: 1.125rem;
        margin-bottom: 20px;
    }

    .stars {
        list-style-type: none;
        padding: 0;
        display: flex;
    }

    .stars li {
        color: #f39c12;
        margin-right: 5px;
    }

</style>

