@model ArmedBooks.BBL.Dtos.ProductDto
@{
    ViewData["Title"] = "Mahsulot";
    Layout = "_Layout";
}

<div class="products">
    <div class="container">
        <div class="row">
            <!-- Описание товара -->
            <section id="product-detail">
                <div class="container">
                    <div class="product-detail">
                        <!-- Изображение товара -->
                        <div class="product-images">
                            <img src="@Model.ImagePaths.FirstOrDefault()" alt="@Model.Brand + asosiy rasm" class="main-image">
                            <div class="thumbnails">
                                @foreach(var imagePath in Model.ImagePaths.Skip(1))
                                {
                                    <img src="@imagePath" alt="Qo'shimcha rasm" class="thumbnail">
                                }
                            </div>
                        </div>

                        <!-- Информация о товаре -->
                        <div class="product-info">
                            <h2>@Model.Brand</h2>
                            <p class="product-category">Noutbuk</p>
                            <p class="product-description">
                                @Model.About
                            </p>
                            <p class="price">Narxi: $<span>@Model.Price.ToString()</span></p>

                            <div class="product-actions">
                                <button class="btn add-to-cart">Savatga qo'shish</button>
                                <button class="btn buy-now">Sotib olish</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>