@model ArmedBooks.BBL.Dtos.ProductDto
@{
    ViewData["Title"] = "Mahsulot";
}

    <div class="container" style="padding-top: 50px;">
        <div class="row">
            <section id="product-detail">
                <div class="container">
                    <div class="product-detail">
                        <div class="product-images">
                            <img src="@Model.ImagePaths.FirstOrDefault()" alt="@Model.Brand + asosiy rasm" class="main-image">
                            <div class="thumbnails">
                                @foreach(var imagePath in Model.ImagePaths.Skip(1))
                                {
                                    <img src="@imagePath" alt="Qo'shimcha rasm" class="thumbnail">
                                }
                            </div>
                        </div>

                        <div class="product-info">
                            <h2>@Model.Brand</h2>
                            <p class="product-category">Noutbuk</p>
                            <p class="product-description">
                                @Model.About
                            </p>
                            <p class="price">Narxi: $<span>@Model.Price.ToString()</span></p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

<script>
    document.querySelectorAll('.img-thumbnail').forEach(thumbnail => {
        thumbnail.addEventListener('click', function () {
            const mainImage = document.querySelector('.img-fluid');
            mainImage.src = this.src;
        });
    });
</script>