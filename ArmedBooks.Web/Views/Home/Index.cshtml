@using ArmedBooks.BBL.Dtos
@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "Asosiy";
    Layout = "_Layout";
}

<!-- Banner Starts Here -->
<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        <div class="banner-item-01">
            <div class="text-content">
                <h2>Har bir mahsulot qattiq sifat nazoratidan o'tadi</h2>
            </div>
        </div>
        <div class="banner-item-02">
            <div class="text-content">
                <h2>Ortiqcha to'lovlarsiz eng yaxshi echimlar</h2>
            </div>
        </div>
        <div class="banner-item-03">
            <div class="text-content">
                <h2>MDH boʻylab tezkor qoʻllab-quvvatlash va yetkazib berish</h2>
            </div>
        </div>
    </div>
</div>
<!-- Banner Ends Here -->

<div class="latest-products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Mahsulotlar</h2>
                    <a asp-action="Products" asp-controller="Home" asp-area="">Barcha mahsulotlarni ko'rish <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            @if (!Model.Any())
            {
                <div class="col-md-12">
                    <p>Hozircha mahsulotlar mavjud emas.</p>
                </div>
            }
            else
            {
                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        <div class="product-item">
                                <a href="#"><img src="@Url.Content("~/" + @product.ImagePaths?.FirstOrDefault())" alt="@product.Brand"></a>
                            <div class="down-content">
                                <a href="@Url.Action("Details", "Home", new { id = product.Id })"><h4>@product.Brand</h4></a>
                                <h6>@product.Price.ToString()</h6>
                                <p>@product.About</p>
                                <ul class="stars">
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div class="best-features">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Biz haqimizda</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="left-content">
                    <h4>Eng yaxshi mahsulotlarni qidiryapsizmi?</h4>
                    <p>ARMEDBOOKS 2019-yildan buyon faoliyat yurituvchi MDHda harbiy-sanoat noutbuklarining yetakchi yetkazib beruvchisi hisoblanadi.</p>
                    <ul class="featured-list">
                        <li><a href="#">Harbiy, sanoat va korporativ mijozlar uchun maxsus yechimlar</a></li>
                        <li><a href="#">Ishonchli va bardoshli kompyuter uskunalari</a></li>
                        <li><a href="#">MDH bo'ylab tezkor yetkazib berish va qo'llab-quvvatlash</a></li>
                        <li><a href="#">Yuqori sifat va qulay narxlar kombinatsiyasi</a></li>
                        <li><a href="#">Barqarorlik va xavfsizlikka ega, ekstremal sharoitlarga moslashtirilgan texnika</a></li>
                    </ul>
                    <a href="about.html" class="filled-button">Batafsil</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="right-image">
                    <img src="~/images/feature-image.jpg" alt="ARMEDBOOKS">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="inner-content">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>Ekstremal Sharoit Uchun Mukammal Mahsulotlar</h4>
                            <p>Yuqori standartlarga javob beradigan, ekstremal sharoitlarga chidamli texnologiyalar.</p>
                        </div>
                        <div class="col-md-4">
                            <a href="#" class="filled-button">Hozir sotib oling</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
